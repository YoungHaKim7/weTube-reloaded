extends ../base 
include ../mixins/video

block content
    div.profile-Body
        div.profile__user
            div.profile__user-info
                div.profile__user-img
                    if loggedInUser.socialOnly
                        img.avatar(src=user.avatarUrl crossorigin)
                    else 
                        img.avatar(src="/"+user.avatarUrl)
                    
                div.profile__user-text
                    div.profile__user-text_name
                        h4 Name
                        span=user.name
                    div.profile__user-text_sub
                        div
                            h4 Email
                            span=user.email
                        div
                            h4 Username
                            span=user.username
            if loggedIn && (loggedInUser._id === String(user._id)) 
                div.profile__user-btn
                    h1 
                        a(href="/users/edit") Edit profile 

    div.profile-video
        each video in user.videos 
            +video(video)
        else 
            span No videos found