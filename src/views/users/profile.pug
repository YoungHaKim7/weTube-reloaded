extends ../base 
include ../mixins/video

block content 
    div.profile__user 
        div.profile__user-img
            img(src=loggedInUser.avatarUrl)
            span=user.name 
        div.profile__user-text 
            span=user.email 
            span=user.username
    each video in user.videos 
        +video(video)
    else 
        li Sorry, nothing video.
    h1
        a(href="/users/edit") Edit profile 