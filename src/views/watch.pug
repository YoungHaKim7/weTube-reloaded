extends base.pug

block content 
    div#videoContainer
        video(src="/"+video.fileUrl, width="700", height="400")
        div#videoController.videoControls
            div.videoControls__play
                button#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range", value=0 min="0", step="1")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range", value=0.5 min="0", max="1", step="0.1")#volume
                button#mute
                    i.fas.fa-volume-up           
            div 
                button#fullScreen
                    i.fas.fa-expand
        
    //
        p=video.description
        small=video.createdAt
        div 
            small Uploaded by 
                a(href=`/users/${video.owner._id}`) #{video.owner.name}
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit video &rarr;
            br
            a(href=`${video.id}/delete`) Delete video &rarr;
block scripts 
    script(src="/assets/js/videoPlayer.js")  