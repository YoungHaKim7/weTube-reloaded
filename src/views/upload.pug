extends base

block content
    div.upload-body
        div.video__preview
            video#preview 
            button#startBtn
                span Start
                i.fas.fa-video
        div.upload-part
            form(method="POST" enctype="multipart/form-data").upload-form
                label(for="video") Video File
                input(type="file", accept="video/*", required, id="video", name="video")
                label(for="thumb") Thumbnail File
                input(type="file", accept="image/*", required, id="thumb", name="thumb")
                input(name="title" placeholder="Title", required, type = "text", maxlength=20)
                input(name="description" placeholder="description", required, type = "text", maxlength = 140)
                input(name="hashtags" placeholder="hashtags, Separate by comma", required, type = "text")
                input(type="submit", value="upload video")
block scripts 
    script(src="/assets/js/recorder.js")  